<div {{did-update this.selectionChangedHandler @controller.state}}>
{{#if this.articleElement}}
  <AuCard
    @shadow={{true}}
    @size="flush" as |c|>
    <c.header class="au-u-hidden-visually">
      <AuHeading @level="3" @skin="6">
        {{t "besluit-plugin.card.title"}}
      </AuHeading>
    </c.header>
    <c.content class="au-c-content--small">
      <AuList @divider={{true}} class="au-u-padding-top-tiny au-u-padding-bottom-tiny">
        <AuList::Item>
          <AuButton
            @icon="bin"
            @iconAlignment="left"
            @skin="link"
            {{on 'click' this.deleteArticle}}>
            {{t "besluit-plugin.action.delete-article"}}
          </AuButton>
        </AuList::Item>
        <AuList::Item>
          <AuButton
            @icon="nav-up"
            @iconAlignment="left"
            @skin="link"
            {{on 'click' this.moveUpArticle}}>
            {{t "besluit-plugin.action.article-up"}}
          </AuButton>
        </AuList::Item>
        <AuList::Item>
          <AuButton
            @icon="nav-down"
            @iconAlignment="left"
            @skin="link"
            {{on 'click' this.moveDownArticle}}>
            {{t "besluit-plugin.action.article-down"}}
          </AuButton>
        </AuList::Item>
      </AuList>
    </c.content>
  </AuCard>
{{/if}}
</div>