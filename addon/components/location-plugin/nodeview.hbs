{{! @glint-nocheck: not typesafe yet }}
<AuPill
  @icon={{this.PencilIcon}}
  @iconAlignment='right'
  class='variable atomic'
  {{on 'click' @selectNode}}
>
  {{#if this.address}}
    {{this.address.formatted}}
  {{else}}
    <span class='mark-highlight-manual'>
      {{this.translations.placeholder}}
    </span>
  {{/if}}
  {{#if this.label}}
    <span class='label'>
      ({{this.label}})
    </span>
  {{/if}}
</AuPill>