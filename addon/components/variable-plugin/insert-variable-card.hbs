{{#if this.showCard}}
  <AuCard
    @flex={{true}}
    @divided={{true}}
    @isOpenInitially={{true}}
    @expandable={{true}}
    @shadow={{true}}
    @size='small'
    as |c|
  >
    <c.header>
      <AuHeading @level='3' @skin='6'>
        {{t 'variable-plugin.insert-variable'}}
      </AuHeading>
    </c.header>
    <c.content>
      <PowerSelect
        @allowClear={{false}}
        @searchEnabled={{false}}
        @options={{this.variablesArray}}
        @selected={{this.selectedVariable}}
        @onChange={{this.updateSelectedVariable}}
        as |variable|
      >
        {{variable.label}}
      </PowerSelect>
      {{#if this.hasSubtype}}
        <PowerSelect
          @allowClear={{false}}
          @searchEnabled={{false}}
          @options={{this.subtypes}}
          @selected={{this.selectedSubtype}}
          @onChange={{this.updateSubtype}}
          as |subtype|
        >
          {{subtype.label}}
        </PowerSelect>
      {{/if}}
      <AuFormRow>
        <AuLabel for='label'>
          {{t 'variable-plugin.label'}}
        </AuLabel>
        <AuInput
          id="label"
          placeholder={{t 'variable-plugin.labelPlaceholder'}}
          @type="text"
          @width="block"
          @value={{this.variableLabel}}
          {{on "input" this.updateVariableLabel}}
        />
      </AuFormRow>
      {{#if (eq this.type 'number')}}
        <VariablePlugin::NumberSettings
          @minimumValue={{this.extraAttributes.minimumValue}}
          @maximumValue={{this.extraAttributes.maximumValue}}
        />
      {{/if}}
      <AuButton
        {{on 'click' this.insert}}
        @disabled={{or
          (not this.selectedVariable)
          (and this.hasSubtype (not this.selectedSubtype))
        }}
      >{{t 'variable-plugin.button'}}</AuButton>
    </c.content>
  </AuCard>
{{/if}}