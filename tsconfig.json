{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "noPropertyAccessFromIndexSignature": true,
    "noEmitOnError": false,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "@lblod/ember-rdfa-editor-lblod-plugins": [
        "addon"
      ],
      "@lblod/ember-rdfa-editor-lblod-plugins/*": [
        "addon/*"
      ],
      "@lblod/ember-rdfa-editor-lblod-plugins/test-support": [
        "addon-test-support"
      ],
      "@lblod/ember-rdfa-editor-lblod-plugins/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*"
      ],
      "@lblod/ember-rdfa-editor": [
        "node_modules/@lblod/ember-rdfa-editor/addon"
      ],
      "@lblod/ember-rdfa-editor/*": [
        "node_modules/@lblod/ember-rdfa-editor/addon/*"
      ],
    },
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
